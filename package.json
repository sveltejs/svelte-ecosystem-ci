{
  "name": "svelte-ecosystem-ci",
  "private": true,
  "version": "0.0.1",
  "description": "svelte Ecosystem CI",
  "scripts": {
    "prepare": "pnpm exec simple-git-hooks",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc",
    "format": "prettier --ignore-path .gitignore --check .",
    "format:fix": "pnpm format --write",
    "test:self": "tsx ecosystem-ci.ts _selftest",
    "test": "tsx ecosystem-ci.ts",
    "bisect": "tsx ecosystem-ci.ts bisect"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@10.2.1",
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": "^10.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sveltejs/svelte-ecosystem-ci.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sveltejs/svelte-ecosystem-ci/issues"
  },
  "homepage": "https://github.com/sveltejs/svelte-ecosystem-ci#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "cac": "^6.7.14",
    "execa": "^9.5.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@antfu/ni": "^24.3.0",
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.14.1",
    "@types/semver": "^7.7.0",
    "eslint": "^9.25.1",
    "eslint-plugin-n": "^17.17.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "semver": "^7.7.1",
    "simple-git-hooks": "^2.12.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  },
  "pnpm": {
    "overrides": {
      "braces@<3.0.3": "^3.0.3",
      "cross-spawn@>=7.0.0 <7.0.5": "^7.0.5"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ],
    "auditConfig": {
      "ignoreGhsas": [
        "GHSA-67mh-4wv8-2f99"
      ]
    }
  }
}
